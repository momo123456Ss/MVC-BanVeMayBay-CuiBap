@model IEnumerable<BanVeMayBayHoacVeTau.Models.Product>

@{
    ViewBag.Title = "ListProducts";
    Layout = "~/Views/Shared/_Layout2.cshtml";

}

<h2>ListProducts</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <div class="form-group form-inline" style="float:right;">
        <p>
            Search: @Html.TextBox("SearchString", "", new { @class = "form-control" })
            <input type="submit" class="btn btn-default" value="Search" />
        </p>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SupplierID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NormalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VIPPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NormalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VIPPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
            </td>
        </tr>
    }
</table>
